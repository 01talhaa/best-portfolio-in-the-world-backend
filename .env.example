# Environment Configuration Example
# Copy this file to .env and configure for your environment

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/portfolio
DB_HOST=localhost
DB_PORT=5432
DB_NAME=portfolio_db
DB_USER=
DB_PASSWORD=

# API Configuration
API_VERSION=v1
API_BASE_URL=http://localhost:3000

# Authentication
JWT_SECRET=your-secret-key-change-this
JWT_EXPIRES_IN=24h
SESSION_SECRET=your-session-secret

# Feature Flags - API Features
FEATURE_API_V2=false
FEATURE_GRAPHQL=false

# Feature Flags - Authentication
FEATURE_OAUTH=false
FEATURE_2FA=false

# Feature Flags - Business Features
FEATURE_PREMIUM=false
FEATURE_BETA=false

# Feature Flags - Infrastructure
FEATURE_NEW_DB=false
FEATURE_CACHE=true
FEATURE_RATE_LIMIT=true

# External Services
REDIS_URL=redis://localhost:6379
ELASTICSEARCH_URL=http://localhost:9200

# Email Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@example.com

# Cloud Storage (AWS S3 example)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET=

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Security
BCRYPT_ROUNDS=10
PASSWORD_MIN_LENGTH=8

# Testing
TEST_DATABASE_URL=mongodb://localhost:27017/portfolio_test
